<%-include('partials/header.ejs')  %>

<body>

    <div class="_box _main">
        <!-- <h3>Today's TO-DOs</h3> -->
        <% var months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'] %>
        <% var weekDay = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'] %>
        <% var d = new Date(); %>
        <h3><span class="wd"><%= weekDay[d.getDay()] %></span> <%= months[d.getMonth()] %> <%=  d.getDate() %>,
            <%= d.getFullYear() %></h3>

        <div class="listContainer">

            <form action="/Today" method="POST" class="todo form-control">
                <input class="input input-alt" placeholder="What to do?" required="" type="text" name="todo"
                    autofocus autocomplete="off">
                <span class="input-border input-border-alt"></span>

                <!-- <input type="checkbox" name="checkState"> -->
                <!-- <input type="input" class="input" name="todo" autofocus autocomplete="off"> -->
            </form>

            <div class="checklist">
                <% if(locals.array){ %>
                <% array.map(a => {%>
                <!-- <input type="checkbox" <%# a[0] ? 'checked' : ''%> > -->
                <label class="container">
                    <input type="checkbox" class="cb" id="<%=array.indexOf(a)%>">
                    <svg viewBox="0 0 64 64" height="2em" width="2em">
                      <path d="M 0 16 V 56 A 8 8 90 0 0 8 64 H 56 A 8 8 90 0 0 64 56 V 8 A 8 8 90 0 0 56 0 H 8 A 8 8 90 0 0 0 8 V 16 L 32 48 L 64 16 V 8 A 8 8 90 0 0 56 0 H 8 A 8 8 90 0 0 0 8 V 56 A 8 8 90 0 0 8 64 H 56 A 8 8 90 0 0 64 56 V 16" pathLength="575.0541381835938" class="path"></path>
                    </svg>
                  </label>

                <!-- <input class="cb" type="checkbox" id="<%#array.indexOf(a)%>"> -->
                <p class="td"><%=a%></p>

                <% }) %>
                <% } %>
            </div>

        </div>



</body>

<%-include('partials/footer.ejs') %>